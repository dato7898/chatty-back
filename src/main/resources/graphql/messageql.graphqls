type Message {
    id: ID,
    user: User,
    roomId: String,
    text: String,
    fileIds: [String],
    createdAt: String,
    editedAt: String
}

input MetaMessage {
    text: String
    fileIds: [String]
}

extend type Query {
    messagesByUserId(userId: String, pageNum: Int, pageSize: Int): [Message]
}

extend type Mutation {
    addMessageToUser(message: MetaMessage, userId: String): Message
    deleteMessage(messageId: String): Boolean
}