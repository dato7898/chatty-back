type Message {
    id: ID,
    senderId: String,
    roomId: String,
    text: String,
    fileIds: [String]
}

input MetaMessage {
    text: String
    fileIds: [String]
}

extend type Query {
    messagesByUserId(userId: String, pageNum: Int, pageSize: Int): [Message]
}

extend type Mutation {
    addMessageToUser(message: MetaMessage, userId: String): Message
    deleteMessage(messageId: String): Boolean
}